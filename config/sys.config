%% -*- erlang -*-
[
 {blockchain_http,
  [
   {port, 8080},
   {db_ro_pool,
    [
     {size, 10},
     {max_overflow, 20}
    ]},
   {db_rw_pool,
    [
     {size, 2},
     {max_overflow, 5}
    ]},
   {db_ro_handlers,
    [
     bh_route_blocks,
     bh_route_accounts,
     bh_route_hotspots,
     bh_route_pending_txns
    ]},
   {db_rw_handlers,
    [
     bh_route_pending_txns
    ]}
  ]},
 {lager,
  [
   {suppress_supervisor_start_stop, true},
   {log_root, "log"},
   {crash_log, "crash.log"},
   {colored, true},
   {handlers,
    [
     {lager_console_backend, [{level, debug}]},
     {lager_file_backend, [{file, "console.log"}, {level, info}]},
     {lager_file_backend, [{file, "error.log"}, {level, error}]}
    ]}
  ]}
].
